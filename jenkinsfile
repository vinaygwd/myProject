pipeline{
    agent any
    tools{
        maven 'maven-3.6'
    }
    stages{
        stage('checkout'){
            steps{
                git 'https://github.com/vinaygwd/myProject.git'
            }
        }
        stage('build'){
            steps{
                sh 'mvn compile'
            }
        }
        stage('test'){
            steps{
                sh 'mvn test'
                junit '**/target/surefire-reports/TEST-*.xml'
            }
        }
        stage('package'){
            steps{
                sh 'mvn package'
            }
        }
    }   
}
